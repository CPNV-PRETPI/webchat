rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    match /readonly/{docId} {
      allow read: if true;
      allow write: if false;
    }
    match /users/{userId} {
      allow write: if (userId == request.auth.uid);
    }
    match /posts/{postId}{
      // Allow read access if the post is public or the user is the author
      allow read: if resource.data.visibility == "public" || resource.data.authorId == request.auth.uid;

      // Allow write access if it's a new document or if the user is the author
      allow create: if request.auth != null;
      allow write: if request.auth.uid == resource.data.authorId;
    }
  }
}